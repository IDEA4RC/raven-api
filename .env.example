# Environment variables for the RAVEN API

# Project configuration
PROJECT_NAME=RAVEN API
VERSION=0.1.0
API_V1_STR=/raven-api/v1

# CORS configuration
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000", "http://localhost", "https://host01.lst.tfo.upm.es"]

# Database
DATABASE_URI=postgresql://raven_user:raven_password@localhost:5432/raven_db

# Security
SECRET_KEY=change_me_to_a_secure_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development

# Telemetry (for environments with Istio)
ENABLE_TELEMETRY=False
TELEMETRY_ENDPOINT=http://jaeger-collector:4317
TELEMETRY_SAMPLING_RATE=1.0

# Prometheus metrics
ENABLE_PROMETHEUS=False
METRICS_PORT=8000

# Host
HOST_URL=https://host01.lst.tfo.upm.es
HOST_URL=https://host01.lst.tfo.upm.es
